{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2015",
        "allowJs": false,
        "strict": true,
        "outDir": "lib",
        "module": "commonjs",
        "importHelpers": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
