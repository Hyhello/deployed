{
    "npmClient": "yarn",
    "useWorkspaces": true,
    "version": "1.7.0",
    "command": {
        "publish": {
            "allowBranch": "master",
            "conventionalCommits": true,
            "context": {
                "isPatch": true
            },
            "ignoreChanges": [
                "**/*.md",
                "**/__tests__/**"
            ],
            "message": "Release: version %v"
        }
    }
}
